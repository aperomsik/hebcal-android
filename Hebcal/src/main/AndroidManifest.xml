<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.peromsik.hebcal"
      android:versionCode="2"
      android:versionName="2.2">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="19"/>
	<uses-permission android:name="android.permission.READ_CALENDAR"></uses-permission>
    <application android:icon="@drawable/icon" android:label="@string/app_name" 
        android:allowBackup="true" android:debuggable="true">
        <activity android:name=".Hebcal"
                  android:theme="@style/Theme.AppCompat.NoActionBar"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

<activity android:name=".HebcalPrefsActivity" android:label="@string/preferences_title">
    <intent-filter><category android:name="android.intent.category.DEFAULT"/>
<action android:name=".HebcalPrefsActivity"></action>
</intent-filter>
</activity>
<activity android:name=".CalendarSelectorActivity" android:label="@string/preferences_title">
    <intent-filter><category android:name="android.intent.category.DEFAULT"/>
<action android:name=".CalendarSelectorActivity"></action>
</intent-filter></activity>
</application>

</manifest> 
